#!/bin/sh
set -x

if [ -e "/docker/docker-compose.yml" ]; then
    cd /docker
elif [ -e "/docker/docker-compose/docker-compose.yml" ]; then
    cd /docker/docker-compose/
else
    echo "No docker-compose.yml found"
    exit 1
fi

docker \
    compose \
    pull \
    --ignore-buildable \
    --ignore-pull-failures \
    --include-deps
docker \
    compose \
    pull \
    --ignore-pull-failures

docker \
    compose \
    up \
    -d
