#!/bin/sh

HandBrakeCLI \
    -i "${INPUT}" \
    -o "${OUTPUT}" \
    -e x264 \
    -q 18 \
    --maxWidth 1920 \
    --maxHeight 1080 \
    --cfr \
    --optimize \
    --format mkv \
    --colorspace "primaries=bt709:transfer=bt709:matrix=bt709:tonemap=reinhard:desat=2" \
    --subtitle-lang-list en \
    --all-subtitles
